{
  "appId": "com.rizverse.desktop",
  "productName": "Dashboard Portofolio",
  "directories": {
    "output": "dist"
  },
  "files": [
    "electron/main.js",
    "electron/preload.js",
    "out/**/*",
    "public/**/*",
    "package.json"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": "dmg",
    "icon": "public/logo.png",
    "entitlements": "electron/entitlements.mac.plist",
    "entitlementsInherit": "electron/entitlements.mac.plist",
    "extendInfo": {
      "NSMicrophoneUsageDescription": "Tidak digunakan."
    }
  },
  "win": {
    "target": "nsis",
    "icon": "public/logo.ico",
    "sign": false,
    "signAndEditExecutable": false
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility",
    "icon": "public/logo.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
