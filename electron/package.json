{
  "name": "POS",
  "version": "0.1.0",
  "description": "Desktop application built with Electron and Next.js",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.rizkiramadhan.desktop",
    "productName": "POS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "../out/**/*",
      "../public/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^25.1.0"
  }
}
